generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  // url is removed! Prisma 7+ reads connection from prisma.config.ts
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  phone     String
  password  String
  createdAt DateTime @default(now())
}
